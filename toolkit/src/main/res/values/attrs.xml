<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="DotsPageIndicatorStyle" format="reference"/>

    <attr name="childHorizontalSpacing" format="dimension"/>
    <attr name="childVerticalSpacing" format="dimension"/>
    <attr name="spacing" format="dimension"/>
    <attr name="dotColor" format="color"/>
    <attr name="strokeWidth" format="dimension"/>
    <attr name="strokeColor" format="dimension"/>
    <attr name="snap" format="boolean"/>
    <attr name="dotColorSelected" format="color"/>
    <attr name="strokeColorSelected" format="color"/>

    <declare-styleable name="TaggingLayout">
        <attr name="android:gravity"/>
        <attr name="android:maxLines"/>
        <attr name="childHorizontalSpacing"/>
        <attr name="childVerticalSpacing"/>
    </declare-styleable>

    <declare-styleable name="DotsPageIndicator">
        <attr name="android:orientation"/>
        <attr name="android:radius"/>
        <attr name="spacing"/>
        <attr name="snap"/>
        <attr name="dotColor"/>
        <attr name="dotColorSelected"/>
        <attr name="strokeWidth"/>
        <attr name="strokeColor"/>
        <attr name="strokeColorSelected"/>
    </declare-styleable>
</resources>